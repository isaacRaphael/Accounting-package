@model ICollection<AccountingPackage.Entities.Transaction>

<div class="w-100 d-flex justify-content-center">
    <h2 class="display-4">Transactions By Month</h2>
</div>

<table class="mt-4 table table-bordered table-striped">
    <thead>
        <tr>
            <th>Date</th>
            <th>Amount</th>
            <th>Name</th>
            <th>Email</th>
            <th>Debt</th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Date</td>
            <td>@item.Amount</td>
            <td>@item.Transactor.Name</td>
            <td>@item.Transactor.Email</td>
            <td>@item.Debt</td>
        </tr>
    }

    <tr>
        <td></td>
    </tr>
</table>